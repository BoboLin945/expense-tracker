{{!-- 類別 filter --}}
<form action="/filter" method="POST">
  <select class="form-control w-50 mt-4" name="category" onchange="this.form.submit()">
    <option disabled selected>請選擇</option>
    {{#each categories}}
    <option value="{{ this.name }}" name="{{this.name}}" {{#if ( eq ../category this.name ) }} selected {{/if}}>
      {{this.name}}</option>
    {{/each}}
  </select>
</form>

<div class="total d-flex">
  <h5 class="mt-4">總金額：</h5>
  <p class="mt-5 totalAmount"> {{ totalAmount }}</p>
</div>


