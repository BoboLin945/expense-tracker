<h4>This is index page! 老爸的私房錢</h4>

<h4 class="totalAmount">總金額：</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">日期</th>
      <th scope="col">名稱</th>
      <th scope="col">類別</th>
      <th scope="col">金額</th>
      <th scope="col">管理</th>
    </tr>
  </thead>
  <tbody>
    {{#each records}}
    <tr>
      <td>{{this.date}}</td>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.amount}}</td>
      <td>
        <a class="btn btn-success" href="./expenses/{{ this._id }}/edit">Edit</a>
        <form action="./todos/{{ this._id }}/?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a class="btn btn-outline-info" href="./expenses/create">Create</a>